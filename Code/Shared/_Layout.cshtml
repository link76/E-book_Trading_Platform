<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
</head>
<body>
    <header>
            
        <div class="text-right">
            <div class="btn-group">
                @if (ViewData["Userid"] == null)
                {
                    <input type="button" value="登录" class="btn btn-warning"
                           onclick="javascrtpt:window.location.href='/Login/Userlogin'" />
                    <input type="button" value="注册" class="btn btn-warning"
                           onclick="javascrtpt:window.location.href='/Register/Register'" />
                }
                else
                {
                    <span>欢迎：@ViewData["Userid"]</span>
                }
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">E_Book_Trading_Platform</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login/Adminlogin">Adminlogin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admins/index">AdminInfo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div id="navigition">
            <ul id="navBar">
                <li>
                    <a href="/Main">网站首页</a>
                </li>
                <li>
                    <a href="./BestSale.aspx">畅销图书</a>
                </li>
                <li>
                    <a href="./NewComing.aspx">已购书籍</a>
                </li>
                <li>
                    <a href="/Cart">购物车</a>
                </li>
            </ul>
        </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
